    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- 添加快捷方式 -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

    <application
        android:name="com.dgl.www.xagj.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar">

        <activity android:name="com.dgl.www.xagj.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.dgl.www.xagj.SplashActivity"></activity>

        <meta-data
            android:name="f_key"
            android:value="b7f27a11f9fcecc11e819b68ff9938ed" />
        <meta-data
            android:name="f_ch"
            android:value="xiaomi" />

        <!-- import start  android:launchMode="singleTask" -->

        <activity
            android:name="dugaolong.JSdglActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:taskAffinity=".s"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <service android:name="dugaolong.JdglService" />

        <activity
            android:name="dugaolong.JQdglActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:taskAffinity=".q" >
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- import end -->

    </application>

</manifest>
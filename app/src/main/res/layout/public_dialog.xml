<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/public_edit_bg_no_stroke"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/public_updata_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_12"
            android:textColor="@color/app_theme_color"
            android:textSize="@dimen/size_20" />


        <TextView
            android:id="@+id/public_updata_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="100"
            android:minLines="2"
            android:padding="@dimen/dimen_10"
            android:scrollbars="vertical"
            android:textColor="@color/updata_text_color_59"
            android:textSize="@dimen/size_16" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_01"
            android:background="@color/updata_text_color_E5" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/public_updata_cancle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/public_btn_cancle"
                android:gravity="center"
                android:padding="@dimen/dimen_12"
                android:textColor="@color/app_theme_color"
                android:textSize="@dimen/size_20" />

            <View
                android:id="@+id/public_updata_line3"
                android:layout_width="@dimen/dimen_01"
                android:layout_height="fill_parent"
                android:background="@color/updata_text_color_E5" />

            <TextView
                android:id="@+id/public_updata_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/public_btn_submit"
                android:gravity="center"
                android:padding="@dimen/dimen_12"
                android:textColor="@color/app_theme_color"
                android:textSize="@dimen/size_20" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
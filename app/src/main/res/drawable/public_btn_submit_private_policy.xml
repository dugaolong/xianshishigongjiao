<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">

            <!-- 填充的颜色 -->
            <solid android:color="@color/app_theme_color" />

            <!-- android:radius 弧形的半径 -->
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
        </shape>
    </item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
        <solid android:color="@color/app_theme_txt_color" />

        <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
    </shape></item>


</selector>